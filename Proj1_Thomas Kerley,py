# sets the date range and shifts for weekends
import datetime as dt

x = dt.date.today()
delta = dt.timedelta(days=10)
for i in range(10):
  tempDelta = dt.timedelta(days=i)
  temp = x - tempDelta
  if temp.weekday() > 4:
    print("Weekend date: " + str((temp)))
    delta = delta + dt.timedelta(days=1)
        

print("Today: " + str(x))
print("10 days ago: " + str(x-delta))